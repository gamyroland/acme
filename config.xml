<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.mgl7315.acmeapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>smart washer app</name>
  <description>
    Une application mobile pour machine a laver
  </description>
  <author email="itechteam2016@gmail.com" href="http://cordova.io">
    ITECH_TEAM
  </author>
  <content src="index.html" />
  <icon src="res/icon.png" />
  <plugin name="cordova-plugin-whitelist" />
  <plugin name="cordova-plugin-geolocation" />
  <plugin name="cordova-plugin-splashscreen" />
  <plugin name="cordova-plugin-statusbar"/>
  <access origin="*" />
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackgroundColor" value="0xffffffff"/>
  <preference name="SplashScreenDelay" value="3000" />
  <preference name="SplashScreen" value="splash" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashShowOnlyFirstTime" value="true" />
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="StatusBarBackgroundColor" value="#aaaaaa" />
  <preference name="StatusBarStyle" value="blackopaque" />
  <preference name="permissions" value="none"/>
  <feature name="http://api.phonegap.com/1.0/geolocation"/>
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />

    <!-- Icon size reference: http://stackoverflow.com/questions/12768128/android-launcher-icon-size -->
    <icon src="res/android/ldpi.png" density="ldpi" />
    <icon src="res/android/mdpi.png" density="mdpi" />
    <icon src="res/android/hdpi.png" density="hdpi" />
    <icon src="res/android/xhdpi.png" density="xhdpi" />
    <icon src="res/android/xxhdpi.png" density="xxhdpi" />

    <!-- Splash Screen size reference: https://cordova.apache.org/docs/en/5.0.0/config_ref/images.html -->
    <splash src="res/screen/android/screen-land-hdpi.png" density="land-hdpi" qualifier="land-hdpi"/>
    <splash src="res/screen/android/screen-land-ldpi.png" density="land-ldpi" qualifier="land-ldpi"/>
    <splash src="res/screen/android/screen-land-mdpi.png" density="land-mdpi" qualifier="land-mdpi"/>
    <splash src="res/screen/android/screen-land-xhdpi.png" density="land-xhdpi" qualifier="land-xhdpi"/>
    <splash src="res/screen/android/screen-land-xxhdpi.png" density="land-xxhdpi" qualifier="land-xxhdpi"/>
    <splash src="res/screen/android/screen-port-hdpi.png" density="port-hdpi" qualifier="port-hdpi"/>
    <splash src="res/screen/android/screen-port-ldpi.png" density="port-ldpi" qualifier="port-ldpi"/>
    <splash src="res/screen/android/screen-port-mdpi.png" density="port-mdpi" qualifier="port-mdpi"/>
    <splash src="res/screen/android/screen-port-xhdpi.png" density="port-xhdpi" qualifier="port-xhdpi"/>
    <splash src="res/screen/android/screen-port-xxhdpi.png" density="port-xxhdpi" qualifier="port-xxhdpi"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />

    <icon src="res/ios/icon-180.png" width="180" height="180" />
    <icon src="res/ios/icon-60.png" width="60" height="60" />
    <icon src="res/ios/icon-120.png" width="120" height="120" />
    <icon src="res/ios/icon-76.png" width="76" height="76" />
    <icon src="res/ios/icon-152.png" width="152" height="152" />
    <icon src="res/ios/icon-40.png" width="40" height="40" />
    <icon src="res/ios/icon-80.png" width="80" height="80" />
    <icon src="res/ios/icon-57.png" width="57" height="57" />
    <icon src="res/ios/icon-114.png" width="114" height="114" />
    <icon src="res/ios/icon-72.png" width="72" height="72" />
    <icon src="res/ios/icon-144.png" width="144" height="144" />
    <icon src="res/ios/icon-29.png" width="29" height="29" />
    <icon src="res/ios/icon-58.png" width="58" height="58" />
    <icon src="res/ios/icon-50.png" width="50" height="50" />
    <icon src="res/ios/icon-100.png" width="100" height="100" />

    <!-- Splash Screen size reference: https://cordova.apache.org/docs/en/5.0.0/config_ref/images.html -->
    <splash src="res/screen/ios/splash-320-480.png" width="320" height="480"/>
    <splash src="res/screen/ios/splash-640-960.png" width="640" height="960"/>
    <splash src="res/screen/ios/splash-768-1024.png" width="768" height="1024"/>
    <splash src="res/screen/ios/splash-1536-2048.png" width="1536" height="2048"/>
    <splash src="res/screen/ios/splash-1024-768.png" width="1024" height="768"/>
    <splash src="res/screen/ios/splash-2048-1536.png" width="2048" height="1536"/>
    <splash src="res/screen/ios/splash-640-1136.png" width="640" height="1136"/>
    <splash src="res/screen/ios/splash-750-1334.png" width="750" height="1334"/>
    <splash src="res/screen/ios/splash-1242-2208.png" width="1242" height="2208"/>
    <splash src="res/screen/ios/splash-2208-1242.png" width="2208" height="1242"/>
  </platform>
</widget>
